{ "name": "now-test",
  "version": 2,
  "env": {
    "SECRET": "my secret"
  },
  "builds": [
    { "src": "*.go", "use": "@now/go" }
  ],
  "routes": [
    { "src": "user/(?<id>[0-9]*)", "methods": ["POST"], "dest":"user-post-handler.go?id=$id" },
    { "src": "user/", "methods": ["GET"], "dest":"user-get-handler.go" }
  ]
}
